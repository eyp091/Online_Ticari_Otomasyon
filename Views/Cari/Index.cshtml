@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Cari>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AminLayout.cshtml";
}
<br />
<table class="table table-striped">
    <tr>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach(var x in Model)
            {
                <tr>
                    <td>@x.CariAd</td>
                    <td>@x.CariSoyad</td>
                    <td>@x.CariSehir</td>
                    <td>@x.CariMail</td>
                    <td><a href="/Cari/CariSil/@x.CariId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Cari/CariGetir/@x.CariId" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Cari/MusteriSatıs/@x.CariId" class="btn btn-warning">Satın Alma Geçmişi</a></td>
                </tr>
            }
</table>
<a href="/Cari/YeniCari/" class="btn btn-info">Yeni Cari Ekle</a>