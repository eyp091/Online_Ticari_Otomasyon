@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_AminLayout.cshtml";
}
<br />
<h2>Personel Satış</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@ViewBag.prs</li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Adet</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach(var x in Model)
            {
                <tr>
                    <td>@x.Urun.UrunAd</td>
                    <td>@x.Cari.CariAd @x.Cari.CariSoyad</td>
                    <td>@x.Adet</td>
                    <td>@x.Fiyat</td>
                    <td>@x.Tutar</td>
                    <td>@x.Tarih</td>
                    <td><a href="#" class="btn btn-primary">Yazdır</a></td>
                </tr>
            }
</table>