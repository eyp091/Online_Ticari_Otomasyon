@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.SinifGrup3>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün Marka Tablosu</h3>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @{ int id = 0;}
                @foreach (var x in Model)
                {
                <tr>    
                    <td>@{ id++;} @id</td>
                    <td>@x.Marka</td>
                    <td>
                        <div class="progress progress-xs">
                            <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                        </div>
                    </td>
                    <td>@x.Sayi</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
