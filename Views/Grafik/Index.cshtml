
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AminLayout.cshtml";
}

<h2>Index</h2>

@{ 
    var grafik = new Chart(width: 500, height: 500);
    grafik.AddTitle(text: "Kategoriler ve Ürün Sayıları");
    grafik.AddLegend(title: "Değerler");

    grafik.AddSeries(
        name: "Veriler",
        xValue: new[] { "Beyaz Eşya", "Bilgisayar", "Telefon" },
        yValues: new[] {100, 350, 200}
        );

    grafik.Write();
}